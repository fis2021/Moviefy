<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" prefHeight="400" prefWidth="600"
          vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal"
          fx:controller="org.loose.fis.mov.controllers.RegistrationController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
    <Text id="title-text" text="Moviefy" GridPane.columnIndex="0" GridPane.columnSpan="2"
          GridPane.rowIndex="0"/>

    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="First name:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <TextField fx:id="firstnameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="First name:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <TextField fx:id="lastnameField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="E-mail:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>

    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>

    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Cinema name:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>

    <TextField fx:id="cinemaNameField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <Label text="Cinema address:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>

    <TextField fx:id="cinemaAddressField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

    <Label text="Cinema capacity:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>

    <TextField fx:id="cinemaCapacityField" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

    <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="9"/>

    <ChoiceBox fx:id="role" onAction="#handleUserTypeChange" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="9">
    </ChoiceBox>

    <Text fx:id="registrationMessage" GridPane.columnIndex="1" GridPane.rowIndex="10"/>
    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="7" GridPane.rowIndex="10">
        <Button onAction="#handleRegisterAction" text="Register"/>
    </HBox>
</GridPane>
